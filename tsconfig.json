{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    // Removed typeRoots for i18n-js custom types
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "temp/**",
    "node_modules/**",
    "dist/**",
    "certs/**",
    "public/**",
    "server-dep/**"
  ]
}
